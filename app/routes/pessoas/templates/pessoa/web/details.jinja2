{% from 'bootstrap5/utils.html' import render_icon %}
{% extends "_layout.jinja2" %}
{% block content %}
    <div class="d-flex flex-column min-vh-100 justify-content-center align-items-center p-5">
        <div style="max-width: 800px; width: 100%;">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-start g-0" style="margin: 0;">
                        <div class="col-md-4 pe-3">
                            <!-- Foto da pessoa -->
                            <img src="{{ url_for('pessoa.pessoa_foto', pessoa_id=pessoa.id) }}"
                                 alt="Foto de {{ pessoa.nome }}"
                                 class="rounded"
                                 style="height: 400px; width: auto; object-fit: contain; max-width: 100%; vertical-align: top; display: block;">
                        </div>
                        <div class="col-md-8 ps-3">
                            <!-- Header da pessoa -->
                            {% include 'pessoa/web/_header_pessoa.jinja2' %}
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Coluna da Filmografia como Ator -->
                        <div class="col-md-6">
                            <h5 class="mb-3">{{ render_icon('camera-reels-fill') }} Filmografia como Ator</h5>
                            {% if papeis %}
                                <div class="row">
                                    {% for papel in papeis %}
                                        <div class="col-12 mb-3">
                                            <div class="d-flex align-items-start">
                                                <!-- Poster do filme -->
                                                <img src="{{ url_for('filme.filme_poster', filme_id=papel.filme.id) }}"
                                                     alt="Poster de {{ papel.filme.titulo_portugues or papel.filme.titulo_original }}"
                                                     class="rounded me-3"
                                                     style="width: 64px; height: 64px; object-fit: cover;">
                                                <div>
                                                    <!-- Título do filme -->
                                                    <div>
                                                        <a href="{{ url_for('filme.detail_filme', filme_id=papel.filme.id) }}" class="text-decoration-none">
                                                            <strong>{{ papel.filme.titulo_portugues or papel.filme.titulo_original }} ({{ papel.filme.ano_lancamento }})</strong>
                                                        </a>
                                                    </div>
                                                    <!-- Personagens -->
                                                    <div class="text-muted">
                                                        {% for personagem, creditado in papel.personagens %}
                                                            {{ personagem }}{% if not loop.last %}, {% endif %}
                                                        {% endfor %}
                                                    </div>
                                                    <!-- Badge de não creditado se algum personagem não for creditado -->
                                                    {% if papel.personagens and not papel.personagens[0][1] %}
                                                        <small><span class="badge bg-warning text-dark">não creditado</span></small>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            {% else %}
                                <p class="text-muted">Esta pessoa não possui filmografia como ator.</p>
                            {% endif %}
                        </div>

                        <!-- Coluna da Participação Técnica -->
                        <div class="col-md-6">
                            <h5 class="mb-3">{{ render_icon('tools') }} Participação Técnica</h5>
                            {% if funcoes_tecnicas %}
                                <div class="row">
                                    {% for funcao in funcoes_tecnicas %}
                                        <div class="col-12 mb-3">
                                            <div class="d-flex align-items-start">
                                                <!-- Poster do filme -->
                                                <img src="{{ url_for('filme.filme_poster', filme_id=funcao.filme.id) }}"
                                                     alt="Poster de {{ funcao.filme.titulo_portugues or funcao.filme.titulo_original }}"
                                                     class="rounded me-3"
                                                     style="width: 64px; height: 64px; object-fit: cover;">
                                                <div>
                                                    <!-- Título do filme -->
                                                    <div>
                                                        <a href="{{ url_for('filme.detail_filme', filme_id=funcao.filme.id) }}" class="text-decoration-none">
                                                            <strong>{{ funcao.filme.titulo_portugues or funcao.filme.titulo_original }} ({{ funcao.filme.ano_lancamento }})</strong>
                                                        </a>
                                                    </div>
                                                    <!-- Funções -->
                                                    <div class="text-muted">
                                                        {% for nome_funcao, creditado in funcao.funcoes %}
                                                            {{ nome_funcao }}{% if not loop.last %}, {% endif %}
                                                        {% endfor %}
                                                    </div>
                                                    <!-- Badge de não creditado se alguma função não for creditada -->
                                                    {% if funcao.funcoes and not funcao.funcoes[0][1] %}
                                                        <small><span class="badge bg-warning text-dark">não creditado</span></small>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            {% else %}
                                <p class="text-muted">Esta pessoa não possui participação em equipe técnica.</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% extends "_layout.jinja2" %}
{% from 'bootstrap5/utils.html' import render_icon %}

{% block content %}
    <div class="d-flex flex-column min-vh-100 justify-content-center align-items-center p-5">
        <div style="max-width: 1400px; width: 100%;">
            <!-- Cabeçalho da busca -->
            <div class="mb-4">
                <h4 class="fw-bold">
                    {{ render_icon('search', size='1.5em') }} Resultados da Busca
                </h4>
                {% if termo_busca %}
                    <p class="text-muted mb-0">
                        Resultados para: <strong>"{{ termo_busca }}"</strong>
                    </p>
                {% endif %}
            </div>

            <!-- Mensagem de erro -->
            {% if erro %}
                <div class="alert alert-warning d-flex align-items-center" role="alert">
                    <span class="me-2">{{ render_icon('exclamation-triangle-fill', size='1.2em') }}</span>
                    <div>{{ erro }}</div>
                </div>
                
                <!-- Formulário de busca quando há erro -->
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <form class="d-flex" role="search" action="{{ url_for('root.buscar') }}" method="get">
                            <input class="form-control me-2" type="search" name="q"
                                   placeholder="Buscar filmes ou pessoas" aria-label="Buscar"
                                   value="{{ termo_busca if termo_busca else '' }}">
                            <button class="btn btn-primary" type="submit">Buscar</button>
                        </form>
                    </div>
                </div>
            {% endif %}

            <!-- Resultados da busca -->
            {% if resultado %}
                <!-- Resumo dos resultados -->
                <div class="mb-4">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h5 class="card-title">
                                        <span class="me-2">{{ render_icon('film', size='1.2em') }}</span><br />
                                        {{ resultado.total_filmes }} Filme{{ 's' if resultado.total_filmes != 1 else '' }}
                                    </h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h5 class="card-title">
                                        <span class="me-2">{{ render_icon('people', size='1.2em') }}</span><br />
                                        {{ resultado.total_pessoas }} Pessoa{{ 's' if resultado.total_pessoas != 1 else '' }}
                                    </h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Seção de Filmes -->
                {% if resultado.filmes %}
                    <div class="mb-5">
                        <h5 class="fw-bold mb-3">
                            <span class="me-2">{{ render_icon('film', size='1.2em') }}</span>
                            Filmes ({{ resultado.total_filmes }})
                        </h5>
                        <div class="list-group">
                            {% for filme in resultado.filmes %}
                                <a href="{{ url_for('filme.detail_filme', filme_id=filme.id) }}"
                                   class="list-group-item list-group-item-action d-flex align-items-center">
                                    <!-- Poster do filme -->
                                    {% if filme.com_poster %}
                                        <img src="{{ url_for('filme.filme_poster', filme_id=filme.id) }}"
                                             alt="Poster de {{ filme.titulo_portugues or filme.titulo_original }}"
                                             class="me-3 rounded"
                                             style="width: 60px; height: 90px; object-fit: cover;">
                                    {% else %}
                                        <div class="me-3 bg-light rounded d-flex align-items-center justify-content-center"
                                             style="width: 60px; height: 90px;">
                                            <span class="me-2">{{ render_icon('film', size='1.5em') }}</span>
                                        </div>
                                    {% endif %}
                                    
                                    <!-- Informações do filme -->
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1 fw-semibold">
                                            {{ filme.titulo_portugues or filme.titulo_original }}
                                        </h6>
                                        {% if filme.titulo_portugues and filme.titulo_portugues != filme.titulo_original %}
                                            <p class="mb-1 text-muted small">
                                                {{ filme.titulo_original }}
                                            </p>
                                        {% endif %}
                                        {% if filme.ano_lancamento %}
                                            <small class="text-muted">
                                                <strong>{{ filme.ano_lancamento }}</strong>
                                            </small>
                                        {% endif %}
                                    </div>
                                </a>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}

                <!-- Seção de Pessoas -->
                {% if resultado.pessoas %}
                    <div class="mb-5">
                        <h5 class="fw-bold mb-3">
                            <span class="me-2">{{ render_icon('people', size='1.2em') }}</span>
                            Pessoas ({{ resultado.total_pessoas }})
                        </h5>
                        <div class="list-group">
                            {% for pessoa in resultado.pessoas %}
                                <a href="{{ url_for('pessoa.pessoa_detalhes', pessoa_id=pessoa.id) }}"
                                   class="list-group-item list-group-item-action d-flex align-items-center">
                                    <!-- Foto da pessoa -->
                                    {% if pessoa.com_foto %}
                                        <img src="{{ url_for('pessoa.pessoa_foto', pessoa_id=pessoa.id) }}"
                                             alt="Foto de {{ pessoa.nome }}"
                                             class="me-3 rounded-circle"
                                             style="width: 60px; height: 60px; object-fit: cover;">
                                    {% else %}
                                        <div class="me-3 bg-light rounded-circle d-flex align-items-center justify-content-center"
                                             style="width: 60px; height: 60px;">
                                            <span class="me-2">{{ render_icon('person', size='1.5em') }}</span>
                                        </div>
                                    {% endif %}
                                    
                                    <!-- Informações da pessoa -->
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1 fw-semibold">{{ pessoa.nome }}</h6>
                                        {% if pessoa.nome_artistico %}
                                            <p class="mb-1 text-muted small">
                                                <span class="me-1">{{ render_icon('star', size='0.8em') }}</span>
                                                {{ pessoa.nome_artistico }}
                                            </p>
                                        {% endif %}
                                        {% if pessoa.eh_ator %}
                                            <span class="badge bg-primary" style="font-size: 0.75rem;">
                                                <span class="me-1">{{ render_icon('camera-reels', size='0.8em') }}</span>
                                                Ator
                                            </span>
                                        {% endif %}
                                    </div>
                                </a>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}

                <!-- Mensagem quando não há resultados -->
                {% if not resultado.filmes and not resultado.pessoas %}
                    <div class="text-center py-5">
                        <div class="text-muted">
                            {{ render_icon('search', size='3em', color='secondary') }}
                            <h5 class="mt-3">Nenhum resultado encontrado</h5>
                            <p>Não foram encontrados filmes ou pessoas com o termo "{{ termo_busca }}".</p>
                            <p class="small">Tente usar termos diferentes ou verifique a ortografia.</p>
                        </div>
                    </div>
                {% endif %}

                <!-- Nova busca -->
                <div class="mt-5">
                    <div class="row justify-content-center">
                        <div class="col-md-12">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title text-center mb-3">Fazer nova busca</h6>
                                    <form class="d-flex" role="search" action="{{ url_for('root.buscar') }}" method="get">
                                        <input class="form-control me-2" type="search" name="q"
                                               placeholder="Buscar filmes ou pessoas" aria-label="Buscar"
                                               value="{{ termo_busca if termo_busca else '' }}">
                                        <button class="btn btn-primary" type="submit">Buscar</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
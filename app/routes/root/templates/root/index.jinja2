{% extends "_layout.jinja2" %}
{% from 'bootstrap5/utils.html' import render_icon %}

{% block content %}
<div class="w-100 align-self-start">
    <!-- Message pointing to search box - positioned at top -->
    <div class="container-fluid bg-light border-bottom py-3 shadow-sm">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="alert alert-info mb-0 d-flex align-items-center justify-content-center" role="alert" style="background-color: #cfe2ff; border: 1px solid #b6d4fe;">
                    <div class="me-3" style="font-size: 3rem;">
                        {{ render_icon('arrow-up-circle-fill', color='text-primary') }}
                    </div>
                    <div>
                        <strong class="text-dark fs-5">Comece buscando por algo...</strong>
                        <br>
                        <small class="text-secondary">Use a caixa de busca acima para encontrar filmes ou pessoas</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid mt-5 pt-4">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6 text-center">
                <div class="card border-0 bg-transparent">
                    <div class="card-body">
                        <h1 class="display-4 text-primary mb-4">Bem-vindo ao myMovieDB</h1>
                        <p class="lead text-muted mb-4">Sua biblioteca pessoal de filmes e pessoas do cinema</p>

                        <!-- Quick stats or features could go here -->
                        <div class="row mt-5">
                            <div class="col-md-4 mb-3">
                                <div class="text-center">
                                    <div style="font-size: 2rem;">{{ render_icon('film', color='text-primary') }}</div>
                                    <h5 class="mt-2">Filmes</h5>
                                    <p class="text-muted mb-1"><strong class="fs-4 text-primary">{{ total_filmes }}</strong> cadastrado{{ 's' if total_filmes != 1 else '' }}</p>
                                    <p class="text-muted small"><a href="{{ url_for('filme.random_filme') }}">Descubra</a> e avalie seus filmes favoritos</p>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="text-center">
                                    <div style="font-size: 2rem;">{{ render_icon('people-fill', color='text-primary') }}</div>
                                    <h5 class="mt-2">Pessoas</h5>
                                    <p class="text-muted mb-1"><strong class="fs-4 text-primary">{{ total_pessoas }}</strong> cadastrada{{ 's' if total_pessoas != 1 else '' }}</p>
                                    <p class="text-muted small">Explore atores, diretores e equipe técnica</p>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="text-center">
                                    <div style="font-size: 2rem;">{{ render_icon('star-fill', color='text-primary') }}</div>
                                    <h5 class="mt-2">Avaliações</h5>
                                    <p class="text-muted small">Compartilhe suas opiniões e descobertas</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% from 'bootstrap5/form.html' import render_field %}
{% from 'bootstrap5/utils.html' import render_icon %}
{% extends "_layout.jinja2" %}

{% block content %}
    <div class="d-flex flex-column min-vh-100 justify-content-center align-items-center p-5">
        <div style="max-width: 600px; width: 100%;">
            
            {# Warning Alert #}
            <div class="alert alert-danger mb-4" role="alert">
                <div class="d-flex align-items-center">
                    <div class="me-3" style="font-size: 2rem;">
                        {{ render_icon('exclamation-triangle-fill') }}
                    </div>
                    <div>
                        <h5 class="alert-heading mb-1">Atenção: Exclusão Permanente</h5>
                        <p class="mb-0">
                            Esta ação não pode ser desfeita. O filme e todas as suas avaliações serão removidos permanentemente do sistema.
                        </p>
                    </div>
                </div>
            </div>
            
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        {{ render_icon('trash-fill', size='1.2em') }} Confirmar Exclusão
                    </h4>
                </div>
                
                <div class="card-body">
                    {# Movie Details Display #}
                    <div class="row mb-4">
                        <div class="col-md-4">
                            {# Movie Poster #}
                            {% if filme.poster_base64 %}
                                <img src="{{ url_for('filme.filme_poster', filme_id=filme.id) }}"
                                     alt="Poster de {{ filme.titulo_portugues or filme.titulo_original }}"
                                     class="img-fluid rounded shadow-sm"
                                     style="width: 100%; max-height: 300px; object-fit: contain;">
                            {% else %}
                                <div class="bg-light rounded d-flex align-items-center justify-content-center text-muted"
                                     style="height: 200px;">
                                    <div class="text-center">
                                        {{ render_icon('image', size='3rem') }}
                                        <div class="mt-2">Sem poster</div>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                        
                        <div class="col-md-8">
                            {# Movie Information #}
                            <h5 class="mb-3">Detalhes do Filme</h5>
                            
                            <dl class="row">
                                <dt class="col-sm-4">Título Original:</dt>
                                <dd class="col-sm-8">{{ filme.titulo_original }}</dd>
                                
                                {% if filme.titulo_portugues and filme.titulo_portugues != filme.titulo_original %}
                                    <dt class="col-sm-4">Título em Português:</dt>
                                    <dd class="col-sm-8">{{ filme.titulo_portugues }}</dd>
                                {% endif %}
                                
                                {% if filme.ano_lancamento %}
                                    <dt class="col-sm-4">Ano:</dt>
                                    <dd class="col-sm-8">{{ filme.ano_lancamento }}</dd>
                                {% endif %}
                                
                                {% if filme.duracao_minutos %}
                                    <dt class="col-sm-4">Duração:</dt>
                                    <dd class="col-sm-8">{{ filme.duracao_formatada }}</dd>
                                {% endif %}
                                
                                {% if filme.generos %}
                                    <dt class="col-sm-4">Gêneros:</dt>
                                    <dd class="col-sm-8">
                                        {% for genero in filme.generos %}
                                            <span class="badge bg-secondary me-1">{{ genero.nome }}</span>
                                        {% endfor %}
                                    </dd>
                                {% endif %}
                            </dl>
                            
                            {# Statistics if available #}
                            {% if stats %}
                                <div class="mt-3 p-3 bg-light rounded">
                                    <h6 class="mb-2">{{ render_icon('bar-chart-fill') }} Estatísticas</h6>
                                    <div class="row text-center">
                                        <div class="col-4">
                                            <div class="fw-bold text-primary">{{ stats.total_avaliacoes }}</div>
                                            <small class="text-muted">Avaliações</small>
                                        </div>
                                        {% if stats.total_avaliacoes > 0 %}
                                            <div class="col-4">
                                                <div class="fw-bold text-warning">{{ "%.1f"|format(stats.nota_media) }}</div>
                                                <small class="text-muted">Nota Média</small>
                                            </div>
                                            <div class="col-4">
                                                <div class="fw-bold text-success">{{ "%.0f"|format(stats.percentual_recomendacoes) }}%</div>
                                                <small class="text-muted">Recomendam</small>
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    
                    {# Confirmation Form #}
                    
                    <div class="border-top pt-4">
                        <h6 class="mb-3">
                            {{ render_icon('shield-exclamation') }} Confirmação de Segurança
                        </h6>
                        
                        <form method="POST" novalidate>
                            {{ form.csrf_token }}
                            {{ form.filme_id() }}
                            
                            <div class="mb-4">
                                <p class="mb-2">
                                    Para confirmar a exclusão, digite o <strong>título original</strong> do filme:
                                </p>
                                <div class="alert alert-info">
                                    <strong>{{ filme.titulo_original }}</strong>
                                </div>
                                
{#                                {{ render_field(form.confirm_title, form_type="horizontal") }}#}
                                {{ form.confirm_title(id='confirm_title') }}
                            </div>
                            
                            {# Action Buttons #}
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <a href="{{ url_for('filme.detail_filme', filme_id=filme.id) }}" 
                                       class="btn btn-secondary">
                                        {{ render_icon('arrow-left-circle-fill') }} Cancelar
                                    </a>
                                </div>
                                
                                <div>
                                    <button type="submit" 
                                            class="btn btn-danger btn-lg"
                                            id="delete-confirm-btn">
                                        {{ render_icon('trash-fill') }} Confirmar Exclusão
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                
                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">
                            {{ render_icon('info-circle-fill') }}
                            Esta ação removerá permanentemente o filme e {{ stats.total_avaliacoes if stats else 0 }} avaliação(ões) associada(s).
                        </small>
                        
                        <div class="text-end">
                            <a href="{{ url_for('filme.edit_filme', filme_id=filme.id) }}" 
                               class="btn btn-sm btn-outline-primary me-2">
                                {{ render_icon('pencil-square') }} Editar ao invés de excluir
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            
            {# Additional Safety Information #}
            <div class="mt-3">
                <div class="card border-warning">
                    <div class="card-body">
                        <h6 class="card-title text-warning">
                            {{ render_icon('exclamation-triangle-fill') }} O que será removido:
                        </h6>
                        <ul class="mb-0 small">
                            <li>Registro completo do filme</li>
                            <li>Todas as avaliações e comentários</li>
                            <li>Associações com gêneros</li>
                            <li>Poster e mídia relacionada</li>
                            <li>Estatísticas e métricas</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block scripts %}
    <script>
        document.getElementById('delete-confirm-btn').addEventListener('click', function(event) {
            const confirmInput = document.getElementById('confirm_title').value.trim();
            const originalTitle = "{{ filme.titulo_original }}";

            if (confirmInput !== originalTitle) {
                event.preventDefault();
                alert('O título digitado não corresponde ao título original do filme. Por favor, tente novamente.');
            }
        });
    </script>
{% endblock %}

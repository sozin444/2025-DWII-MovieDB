{% extends "_layout.jinja2" %}
{% from 'bootstrap5/utils.html' import render_icon %}

{% block content %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4>{{ render_icon('pencil-square') }} Editar Elenco</h4>
                    <p class="mb-0 text-muted">{{ filme.titulo_portugues or filme.titulo_original }}</p>
                </div>
                <div class="card-body">
                    <form method="POST">
                        {{ form.hidden_tag() }}
                        
                        <div class="mb-3">
                            <label class="form-label">Pessoa</label>
                            <div class="d-flex align-items-center p-3 bg-light rounded">
                                <img src="{{ url_for('pessoa.pessoa_foto', pessoa_id=atuacao.ator.pessoa.id) }}" 
                                     alt="Foto de {{ atuacao.ator.pessoa.nome }}" 
                                     class="rounded me-3" 
                                     style="width: 48px; height: 48px; object-fit: cover;">
                                <div>
                                    <strong>{{ atuacao.ator.nome_artistico or atuacao.ator.pessoa.nome }}</strong>
                                    {% if atuacao.ator.nome_artistico %}
                                        <br><small class="text-muted">{{ atuacao.ator.pessoa.nome }}</small>
                                    {% endif %}
                                </div>
                            </div>
                            {{ form.pessoa_id() }}
                            <small class="form-text text-muted">A pessoa não pode ser alterada durante a edição.</small>
                            {% if form.pessoa_id.errors %}
                                <div class="invalid-feedback d-block">
                                    {% for error in form.pessoa_id.errors %}
                                        {{ error }}
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>
                        
                        <div class="mb-3">
                            {{ form.personagem.label(class="form-label") }}
                            {{ form.personagem(class="form-control") }}
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <div class="form-check mt-4">
                                    {{ form.creditado(class="form-check-input") }}
                                    {{ form.creditado.label(class="form-check-label") }}
                                </div>
                                <small class="form-text text-muted">Aparece nos créditos</small>
                            </div>
                            <div class="col-md-8">
                                {{ form.tempo_de_tela_minutos.label(class="form-label") }}
                                {{ form.tempo_de_tela_minutos(class="form-control") }}
                                <small class="form-text text-muted">Tempo aproximado de aparição na tela (opcional)</small>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            {{ form.submit(class="btn btn-primary") }}
                            <a href="{{ url_for('filme.detail_filme', filme_id=filme.id) }}" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
